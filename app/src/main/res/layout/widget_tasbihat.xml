<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_widget"
    android:gravity="start"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvTodayTasbihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:drawableEnd="@drawable/ic_return"
        android:drawablePadding="5dp"
        android:fontFamily="@font/dana"
        android:gravity="center"
        android:padding="3dp"
        android:text="@string/today_tasbihat"
        android:textColor="@color/lightGreen"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded,UseCompatTextViewDrawableXml" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTasbihatAATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dana"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/AALabel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTasbihatAACounter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_sun_2"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/dana_num"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTasbihatHATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dana"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/HALabel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTasbihatHACounter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_sun_2"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/dana_num"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTasbihatSATitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dana"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/SALabel"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTasbihatSACounter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_sun_2"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/dana_num"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="0" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>